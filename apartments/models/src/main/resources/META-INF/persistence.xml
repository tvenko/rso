<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence" version="2.0">

    <persistence-unit name="apartments-jpa" transaction-type="RESOURCE_LOCAL">
        <non-jta-data-source>jdbc/ApartmentsDS</non-jta-data-source>

        <class>si.fri.apartment.apartments.models.ApartmentEntity</class>

        <properties>
            <property name="javax.persistence.schema-generation.database.action" value="drop-and-create"/>
            <property name="javax.persistence.schema-generation.create-source" value="metadata"/>
            <property name="javax.persistence.sql-load-script-source" value="sql-scripts/init-apartments.sql"/>
            <property name="javax.persistence.schema-generation.drop-source" value="metadata"/>
        </properties>
    </persistence-unit>


</persistence>